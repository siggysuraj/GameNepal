@model GameNepal.Models.AdvertisementViewModel

@using (Html.BeginForm("EditAdvertisement", "Admin", FormMethod.Post, new { id = "editAdvertisement", enctype = "multipart/form-data" }))
{
    <div class="row">
        @if (TempData["ErrorMsg"] != null)
        {
            <div class="col-lg-12">
                <div class="alert alert-danger fade in" id="divError">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    @Html.Raw(TempData["ErrorMsg"])
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            @Html.Label("Upload File", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBox("file", null, new { @readonly="true", @disabled = "true", name = "file", @id = "file", type = "file", @class = "form-control", @placeholder = "Upload your file" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Title", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.FileName, new { name = "fileName", @id = "fileName", required = "required", @class = "form-control", @placeholder = "Enter advertisement title" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Description", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.Description, new { name = "description", @id = "description", required = "required", style = "resize:none;", @class = "form-control", @placeholder = "Enter description eg. Price, model" })
            </div>
        </div>
    </div>
}