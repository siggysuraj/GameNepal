
@model GameNepal.Models.PaymentPartnerViewModel

@using (Html.BeginForm("EditPaymentPartner", "Admin", FormMethod.Post, new { id = "paymentPartner" }))
{
    <div class="row">
        @if (TempData["ErrorMsg"] != null)
        {
            <div class="col-lg-12">
                <div class="alert alert-danger fade in" id="divError">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    @Html.Raw(TempData["ErrorMsg"])
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            @Html.Label("Name", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.PartnerName, new { @id = "partnerName", required = "required", @class = "form-control", @placeholder = "Enter partner name" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Account Number", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.PaymentInfo, new { @id = "partnerInfo", required = "required", @class = "form-control", @placeholder = "Enter account no." })
            </div>
        </div>
    </div>
}