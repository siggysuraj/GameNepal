<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" />
    <link rel="stylesheet" href="../../Content/all.min.css" />
    <link rel="stylesheet" href="../../Content/bootstrap.min.css" />
    <link rel="stylesheet" href="../../Content/templatemo-style.css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
</head>
<body>
    <div class="parallax-window" data-parallax="scroll" data-image-src="../../Content/images/bg-01.jpg">
        <div class="container-fluid">
            @{ var user = Session["UserInfo"] as User; }
            <div class="loggedUser">
                Logged in as : @user.firstname
            </div>
            <div class="row tm-brand-row">
                <div class="col-lg-3 col-11">
                    <div class="tm-brand-container tm-bg-white-transparent">
                        <img src="~/Content/images/logo.png"/>
                        <br/><br/><br/>

                    </div>

                </div>
                <div class="col-lg-9 col-1">
                    <div class="tm-nav">
                        <nav class="navbar navbar-expand-lg navbar-light tm-bg-white-transparent tm-navbar">
                            @*<button class="navbar-toggler" type="button"
                                        data-toggle="collapse" data-target="#navbarNav"
                                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>*@
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav">
                                    @if (ViewBag.Title != "Admin" && ViewBag.Title != "Register")
                                    {
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Home", "Index", "User", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("My Profile", "MyProfile", "User", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("My Transactions", "TransactionHistory", "User", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Contact Us", "Contact", "Home", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Logout", "Logout", "Home", null, new {@class = "nav-link"})
                                        </li>
                                    }

                                    @if (ViewBag.Title == "Register")
                                    {
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Back to Login Page", "Login", "Home", null, new {@class = "nav-link"})
                                        </li>
                                    }

                                    @if (ViewBag.Title == "Admin")
                                    {
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Home", "Index", "Admin", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Users", "Users", "Admin", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Payment Partners", "PaymentPartners", "Admin", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Ads", "Advertisement", "Admin", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Error Log", "ErrorLog", "Admin", null, new {@class = "nav-link"})
                                        </li>
                                        <li class="nav-item">
                                            <div class="tm-nav-link-highlight"></div>
                                            @Html.ActionLink("Logout", "Logout", "Home", null, new {@class = "nav-link"})
                                        </li>
                                    }
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>

            @RenderBody()

            <!-- Page footer -->
            <footer class="row">
                <p class="col-12 text-white text-center tm-copyright-text">
                    Copyright &copy; GameNepal - Your Gaming Companion :: All rights reserved @DateTime.Now.Year
                </p>
            </footer>
        </div>
        <!-- .container-fluid -->
    </div>

    <script src="../../Scripts/jquery-3.3.1.min.js"></script>
    <script src="../../Scripts/parallax.min.js"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    @Scripts.Render("~/Scripts/myScripts.js")
</body>
</html>