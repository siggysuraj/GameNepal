<html lang="en" dir="ltr">
<head>
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/site.css")
    @Scripts.Render("~/Scripts/myScripts.js")
</head>
<body>
    <div class="container">

        <!-- Static navbar -->
        <nav class="navbar navbar-dark bg-primary">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">Game Nepal - your gaming companion</div>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @if (ViewBag.Title != "Register" && ViewBag.Title != "Admin")
                        {
                            <li>@Html.ActionLink("Home", "Index", "User")</li>
                            <li>@Html.ActionLink("Edit my profile", "EditProfile", "User")</li>
                            <li>@Html.ActionLink("My Transactions", "TransactionHistory", "User")</li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        }

                        @if (ViewBag.Title == "Admin")
                        {
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        }

                        @if (ViewBag.Title == "Register")
                        {
                            <li>@Html.ActionLink("<< Back to Login Page", "Login", "Home")</li>
                        }

                    </ul>
                </div>
            </div>
        </nav>


        <div>
            @if (!string.IsNullOrEmpty(ViewBag.UserName))
            {
                <div>Welcome @ViewBag.UserName !!</div>
            }
            @RenderBody()
        </div>

        <center class="footer navbar-fixed-bottom">
            <hr />
            <p>copyright &copy; GameNepal All rights reserved 2020</p>
        </center>
    </div>
</body>
</html>